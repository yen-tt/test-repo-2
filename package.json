{
  "name": "test-repo-2",
  "version": "1.0.0",
  "description": "",
  "main": "./src/index.js",
  "scripts": {
    "build": "rm -rf lib/** && tsc",
    "test": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yen-tt/test-repo-2.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/yen-tt/test-repo-2/issues"
  },
  "homepage": "https://github.com/yen-tt/test-repo-2#readme",
  "dependencies": {
    "jest": "^27.5.1",
    "typescript": "~4.4.3"
  },
  "jest": {
    "bail": 0,
    "verbose": true,
    "collectCoverage": false,
    "collectCoverageFrom": [
      "src/**"
    ],
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx"
    ],
    "moduleDirectories": [
      "node_modules",
      "<rootDir>"
    ],
    "testEnvironment": "jsdom",
    "testMatch": [
      "<rootDir>/tests/**"
    ],
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json"
      }
    }
  }
}
